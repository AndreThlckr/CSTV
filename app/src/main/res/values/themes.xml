<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CSTV.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/eerie_black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.CSTV</item>

        <item name="android:statusBarColor">@color/eerie_black</item>
        <item name="android:navigationBarColor">@color/eerie_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.CSTV" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/eerie_black</item>
        <item name="android:statusBarColor">@color/eerie_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>